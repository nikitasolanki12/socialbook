
<%#= form_for :post, url: post_path , method: :patch ,local:true  do |f| %>

<div class="col-lg-6 offset-md-3  ">
<%= form_with model: @post, url: post_path(@post), method: :patch, local:false do |f| %>
  <br />
  <div class="form-group">
    <%= f.text_area :description, class: 'form-control' , placeholder:'Tell me more about your post...' , id: "exampleTextarea", rows: "3" %>
  </div>
  <div class="form-group clearfix">
    <%= f.file_field :photo, id: 'uploadimage' , class: 'form-control', style: 'width:20%; float: center;'%>
  </div>
  <br />
  <div class="form-group clearfix">
    <%= f.submit id:'postbutton', class: 'btn btn-primary btn-lg float-end'%>
  </div>
<% end %>     
</div>
