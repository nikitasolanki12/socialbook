<div class="flex-box"><a href="#" style="color:steelblue">Facebook</a><br />
    <p><a href="#" style="color:black">Facebook helps you connect and share with the people in your life.</a></p></div>  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <%#=render "users/shared/navbar"%>
<div class="box">
  <div class="field">
    <br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email or Phone" %>
  </div>
  <div class="field">
    <br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div>
     <% if devise_mapping.rememberable? %>
  <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>
  <div class="btn btn-primary">
    <%= f.submit "Log in" %>
  </div>

 <div class="signin-container">
  <%- if devise_mapping.omniauthable? %>
    <ul class="image-list signin-icons">
      <%- resource_class.omniauth_providers.each do |provider| %>
         <!-- <li><%#= link_to user_facebook_omniauth_authorize_path(resource_name, provider), :title => "Sign in with #{provider.to_s.titleize}" do %>  -->
        <%= link_to omniauth_authorize_path(resource_name, provider),method: :post,
         :title => "Sign in with #{provider.to_s.titleize}" do %> 
          <%= image_tag "oauth_#{provider}.jpg", :alt => "Sign in with #{provider.to_s.titleize}",height:40 %>
        
          <% end -%>
      <% end %>
    </ul>
  <% end -%>
 </div>
<% end %>
<%= render "users/shared/links" %>
</div>


